{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "anchor": {
      "type": "string",
      "enum": [
        "center-left",
        "center",
        "center-right",
        "top",
        "top-right",
        "top-center",
        "top-left",
        "bottom-left",
        "bottom-center",
        "bottom-right"
      ]
    },
    "baseProperties": {
      "icon_size": {
        "type": "string",
        "pattern": "^[0-9]+px$"
      },
      "label": {
        "type": "boolean"
      },
      "tooltip": {
        "type": "boolean"
      }
    },
    "widgets": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "enum": [
              "battery",
              "bluetooth",
              "brightness",
              "cava",
              "clickcounter",
              "cpu",
              "date_time",
              "divider",
              "hypr_idle",
              "hypr_sunset",
              "keyboard",
              "language",
              "media",
              "microphone",
              "power",
              "ram",
              "recorder",
              "spacer",
              "storage",
              "submap",
              "network_usage",
              "stop_watch",
              "system_tray",
              "task_bar",
              "updates",
              "volume",
              "weather",
              "window_title",
              "workspace",
              "workspaces",
              "quick_settings",
              "theme_switcher"
            ]
          },
          {
            "type": "string",
            "pattern": "^@group:\\d+$"
          }
        ]
      }
    }
  },
  "type": "object",
  "properties": {
    "theme": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "enum": [
            "abyssgreen",
            "catpuccin-frappe",
            "catpuccin-latte",
            "catpuccin-macchiato",
            "catpuccin-mocha",
            "cobalt2",
            "cyberdream",
            "cyberpunk",
            "decay-green",
            "dracula",
            "earthy",
            "everforest",
            "gotham-dark",
            "graphite-mono",
            "green-lush",
            "greenify",
            "gruvbox-material",
            "gruvbox",
            "kanagawa",
            "mojave",
            "monochrome",
            "neon",
            "nightfox",
            "nightowl",
            "nord",
            "nordic",
            "oceanic-next",
            "onedark",
            "poimandres",
            "popcode",
            "rain-dark",
            "rosepine",
            "shades-of-purple",
            "solarized-dark",
            "sonokai",
            "synthwave",
            "tokyonight",
            "verminal",
            "zenburn"
          ]
        }
      }
    },
    "general": {
      "type": "object",
      "properties": {
        "screen_corners": {
          "type": "boolean"
        },
        "debug": {
          "type": "boolean"
        },
        "location": {
          "type": "string",
          "enum": ["top", "bottom"]
        },
        "bar_style": {
          "type": "string",
          "enum": ["default", "floating"]
        },
        "layer": {
          "type": "string",
          "enum": ["background", "bottom", "top", "overlay"]
        },
        "widget_style": {
          "type": "string",
          "enum": ["default", "wave1", "wave2", "flat", "shadow"]
        }
      }
    },
    "layout": {
      "type": "object",
      "properties": {
        "left_section": {
          "$ref": "#/definitions/widgets"
        },
        "middle_section": {
          "$ref": "#/definitions/widgets"
        },
        "right_section": {
          "$ref": "#/definitions/widgets"
        },
        "module_groups": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "widgets": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/widgets"
                }
              },
              "spacing": {
                "type": "integer",
                "default": 4,
                "description": "Spacing between widgets in the group"
              },
              "style_classes": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Style classes to apply to the group (e.g. 'bordered', 'compact')"
              }
            },
            "required": ["widgets"]
          }
        }
      }
    },
    "weather": {
      "type": "object",
      "properties": {
        "detect_location": {
          "type": "boolean"
        },
        "location": {
          "type": "string"
        },
        "label": {
          "type": "boolean"
        },
        "tooltip": {
          "type": "boolean"
        }
      }
    },
    "cava": {
      "type": "object",
      "properties": {
        "bars": {
          "type": "integer"
        },
        "color": {
          "type": "string"
        }
      }
    },
    "hypr_sunset": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/baseProperties",
        "temperature": {
          "type": "string",
          "pattern": "^[0-9]+k$"
        },
        "enabled_icon": {
          "type": "string"
        },
        "disabled_icon": {
          "type": "string"
        }
      }
    },
    "hypr_idle": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/baseProperties",
        "enabled_icon": {
          "type": "string"
        },
        "disabled_icon": {
          "type": "string"
        }
      }
    },
    "microphone": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/baseProperties"
      }
    },
    "battery": {
      "type": "object",
      "properties": {
        "label": {
          "type": "boolean"
        },
        "tooltip": {
          "type": "boolean"
        }
      }
    },
    "cpu": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/baseProperties",
        "icon": {
          "type": "string"
        },
        "unit": {
          "type": "string",
          "enum": ["celsius", "fahrenheit"]
        },
        "round": {
          "type": "boolean"
        },
        "show_unit": {
          "type": "boolean"
        },
        "sensor": {
          "type": "string"
        }
      }
    },
    "memory": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/baseProperties",
        "icon": {
          "type": "string"
        }
      }
    },
    "storage": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/baseProperties",
        "icon": {
          "type": "string"
        }
      }
    },
    "workspaces": {
      "type": "object",
      "properties": {
        "count": {
          "type": "integer"
        },
        "hide_unoccupied": {
          "type": "boolean"
        },
        "reverse_scroll": {
          "type": "boolean"
        },
        "empty_scroll": {
          "type": "boolean"
        },
        "ignored": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      }
    },
    "window_title": {
      "type": "object",
      "properties": {
        "enable_icon": {
          "type": "boolean"
        },
        "truncation": {
          "type": "boolean"
        },
        "truncation_size": {
          "type": "integer"
        },
        "title_map": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "spacing": {
      "type": "object",
      "properties": {
        "size": {
          "type": "integer"
        }
      }
    },
    "divider": {
      "type": "object",
      "properties": {
        "size": {
          "type": "integer"
        }
      }
    },
    "click_counter": {
      "type": "object",
      "properties": {
        "count": {
          "type": "integer"
        }
      }
    },
    "updates": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/baseProperties",
        "os": {
          "type": "string",
          "enum": ["arch", "fedora", "opensuse", "ubuntu"]
        },
        "interval": {
          "type": "integer"
        }
      }
    },
    "osd": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/anchor",
        "enabled": {
          "type": "boolean"
        },
        "duration": {
          "type": "integer"
        },
        "show_percentage": {
          "type": "boolean"
        }
      }
    },
    "keyboard": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/baseProperties",
        "icon": {
          "type": "string"
        }
      }
    },
    "submap": {
      "type": "object",
      "properties": {
        "$ref": "#/definitions/baseProperties",
        "icon": {
          "type": "string"
        }
      }
    },
    "quick_settings": {
      "type": "object",
      "properties": {
        "media": {
          "type": "object",
          "properties": {
            "ignore": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "truncation_size": {
              "type": "integer"
            },
            "show_album": {
              "type": "boolean"
            },
            "show_artist": {
              "type": "boolean"
            },
            "show_time": {
              "type": "boolean"
            },
            "show_time_tooltip": {
              "type": "boolean"
            }
          }
        },
        "shortcuts": {
          "type": "array",
          "maxItems": 4,
          "items": {
            "type": "object",
            "required": ["command"],
            "properties": {
              "icon": {
                "type": "string",
                "description": "Icon name from icon theme"
              },
              "label": {
                "type": "string",
                "description": "Optional text label for the button"
              },
              "command": {
                "type": "string",
                "description": "Command to execute when clicked"
              },
              "tooltip": {
                "type": "string",
                "description": "Optional tooltip text"
              },
              "icon_size": {
                "type": "integer",
                "description": "Icon size in pixels"
              }
            }
          }
        }
      },
      "task_bar": {
        "type": "object",
        "properties": {
          "icon_size": {
            "type": "integer"
          }
        }
      },
      "language": {
        "type": "object",
        "properties": {
          "truncation_size": {
            "type": "integer"
          }
        }
      },
      "mpris": {
        "type": "object",
        "properties": {
          "truncation_size": {
            "type": "integer"
          },
          "format": {
            "type": "string"
          }
        }
      },
      "system_tray": {
        "type": "object",
        "properties": {
          "icon_size": {
            "type": "integer"
          },
          "ignored": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "bluetooth": {
        "type": "object",
        "properties": {
          "$ref": "#/definitions/baseProperties"
        }
      },
      "volume": {
        "type": "object",
        "properties": {
          "$ref": "#/definitions/baseProperties",
          "step_size": {
            "type": "integer"
          }
        }
      },
      "brightness": {
        "type": "object",
        "properties": {
          "$ref": "#/definitions/baseProperties",
          "step_size": {
            "type": "integer"
          }
        }
      },
      "power": {
        "type": "object",
        "properties": {
          "icon": {
            "type": "string"
          },
          "icon_size": {
            "type": "string",
            "pattern": "^[0-9]+px$"
          },
          "tooltip": {
            "type": "boolean"
          }
        }
      },
      "theme_switcher": {
        "type": "object",
        "properties": {
          "icon": {
            "type": "string"
          },
          "icon_size": {
            "type": "string",
            "pattern": "^[0-9]+px$"
          },
          "silent": {
            "type": "boolean"
          }
        }
      },
      "date_time": {
        "type": "object",
        "properties": {
          "format": {
            "type": "string"
          },
          "notification_count": {
            "type": "boolean"
          },
          "notification": {
            "type": "boolean"
          },
          "calendar": {
            "type": "boolean"
          }
        }
      },
      "stop_watch": {
        "type": "object",
        "properties": {
          "stopped_icon": {
            "type": "string"
          },
          "running_icon": {
            "type": "string"
          },
          "icon_size": {
            "type": "string",
            "pattern": "^[0-9]+px$"
          }
        }
      },
      "notification": {
        "type": "object",
        "properties": {
          "ignored": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "anchor": {
            "$ref": "#/definitions/anchor"
          },
          "auto_dismiss": {
            "type": "boolean"
          },
          "timeout": {
            "type": "integer"
          },
          "max_count": {
            "type": "integer",
            "description": "Maximum total number of notifications to keep across all apps"
          },
          "per_app_limits": {
            "type": "object",
            "description": "Maximum number of notifications to keep per specific app",
            "patternProperties": {
              "^.*$": {
                "type": "integer",
                "description": "Maximum number of notifications to keep for this app"
              }
            }
          },
          "play_sound": {
            "type": "boolean"
          },
          "sound_file": {
            "type": "string"
          }
        }
      },
      "network_usage": {
        "type": "object",
        "properties": {
          "icon_size": {
            "type": "string",
            "pattern": "^[0-9]+px$"
          },
          "upload_icon": {
            "type": "string"
          },
          "download_icon": {
            "type": "string"
          },
          "tooltip": {
            "type": "boolean"
          },
          "upload": {
            "type": "boolean"
          },
          "download": {
            "type": "boolean"
          }
        }
      },
      "recorder": {
        "type": "object",
        "properties": {
          "videos": {
            "type": "string"
          },
          "tooltip": {
            "type": "boolean"
          },
          "audio": {
            "type": "boolean"
          },
          "icon_size": {
            "type": "integer"
          }
        }
      }
    }
  }
}
